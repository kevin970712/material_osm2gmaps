<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Osm2gmapsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.Main"
        tools:targetApi="31">

        <activity
            android:name=".activities.AboutActivity"
            android:exported="false" />

        <activity
            android:name=".activities.HistoryActivity"
            android:exported="false" />

        <activity
            android:name=".activities.CustomLinkActivity"
            android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="geo" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="osm.org" />
                <data android:host="omaps.app" />
                <data android:host="osmand.net" />
                <data android:host="maps.apple.com" />
                <data android:host="magicearth.com" />
                <data android:host="maps.app.goo.gl"/>
                <data android:host="goo.gl"/>
                <data android:host="maps.google.com"/>
                <data android:host="openstreetmap.com"/>
                <data android:host="2gis.ru"/>
                <data android:host="2gis.com"/>
                <data android:host="acme.com"/>
                <data android:host="copernix.io"/>
                <data android:host="gpsvisualizer.com"/>
                <data android:host="openhistoricalmap.org"/>
                <data android:host="opentopomap.org"/>
                <data android:host="waze.com"/>
                <data android:host="wikimapia.org"/>
                <data android:host="wma.wmflabs.org"/>

            </intent-filter>

        </activity>
        <activity android:name=".activities.ConfigActivity" />
    </application>

</manifest>